{% extends 'core/base.html' %}

{% load static %}

{% block stylesheet %}
  <link rel="stylesheet" type="text/css" href="{% static 'trips/style.css' %}" />
{% endblock stylesheet %}

{% block content %}
  <div class="page">
    <div class="wrapper">
      <div class="banner-logo" id="BannerLogo">
        <h1>{{ page_title }}</h1>
        <div class="row">
          <div class="col-sm-4">
            <p>Start date: {{ trip.start_date }}</p>
          </div>
          <div class="col-sm-4">
            {% if trip.number_nights == 0 %}
              <p>Day trip</p>
            {% else %}
              <p>{{ trip.number_nights }} Nights</p>
            {% endif %}
          </div>
        </div>
      </div>
      <div class="trip-list" id="trip-list">
        <div class="header">
          <h3>Trailhead Location</h3>
        </div>
        {% load crispy_forms_tags %}
        {% crispy form form.helper %}
      </div>
      <div class="trip-list" id="trip-list">
        <div class="header">
          <h3>Objectives</h3>
        </div>
        {% load crispy_forms_tags %}
        {% crispy form form.helper %}
      </div>
      <div class="trip-list" id="trip-list">
        <div class="header">
          <h3>Camp Location{% if trip.number_nights.gt 1 %}s{% endif %}</h3>
        </div>
        {% load crispy_forms_tags %}
        {% crispy form form.helper %}
      </div>
    </div>
  </div>
{% endblock content %}





{% if trip %}
  <h1>{{ trip.title }}</h1>
  {% if trip.trailhead_latitude and trip.trailhead_longitude %}
    <h3>Trailhead coordinates: {{ trip.trailhead_latitude }}, {{ trip.trailhead_longitude }}</h3>
    <h3>Start date: {{ trip.start_date }}</h3>
  {% endif %}
  <h2>Confirmed Attendees:</h2>
  {% if user_list %}
    <ul>
    {% for user in user_list %}
      <li><a href="{% url 'trips:user_detail' user.id %}">{{ user }}</a></li>
    {% endfor %}
    </ul>
  {% else %}
    <p>Nobody is registered for {{ trip }}</p>
  {% endif %}
{% else %}
  <p>No trip information available.</p>
{% endif %}
